<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.parkingpeace.controllers.LandlordDashboardController" prefWidth="960" prefHeight="540">
    <top>
        <HBox alignment="CENTER" spacing="25">
            <ImageView>
                <image>
                    <Image url="@../../../../Logo/Logo.png" />
                </image>
            </ImageView>
            <TextField promptText="Search" fx:id="searchTextField"/>
            <ComboBox fx:id="dropdownMenu" promptText="Menu" onAction="#handleDropdownMenuAction">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Edit Profile" />
                        <String fx:value="Bookings" />
                        <String fx:value="Ratings and Comments" />
                        <String fx:value="Logout" />
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>
    </top>
    <center>
        <TableView fx:id="tableView">
            <columns>
                <TableColumn fx:id="photoColumn" prefWidth="150" text="Photo">
                    <cellValueFactory>
                        <PropertyValueFactory property="photo" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="addressColumn" text="Address">
                    <cellValueFactory>
                        <PropertyValueFactory property="address" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="zipCodeColumn" text="Zip Code">
                    <cellValueFactory>
                        <PropertyValueFactory property="zipCode" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="cityColumn" text="City">
                    <cellValueFactory>
                        <PropertyValueFactory property="city" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="ratingColumn" text="Rating">
                    <cellValueFactory>
                        <PropertyValueFactory property="rating" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="servicesColumn" text="Services">
                    <cellValueFactory>
                        <PropertyValueFactory property="services" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="availabilityColumn" text="Availability">
                    <cellValueFactory>
                        <PropertyValueFactory property="availability" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="priceColumn" text="Price">
                    <cellValueFactory>
                        <PropertyValueFactory property="price" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
</BorderPane>

