<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Pos?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="540" prefWidth="960" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.parkingpeace.controllers.ModifyParkingSpotController">

    <!-- Top bar with logo -->
    <top>
        <HBox alignment="CENTER" spacing="25">
            <children>
                <ImageView>
                    <image>
                        <Image url="@../../../../Logo/Logo.png" />
                    </image>
                </ImageView>
            </children>
        </HBox>
    </top>

    <!-- Parking Spot Modification Form -->
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <children>
                <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="locationField" maxWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="priceField" maxWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Services:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="servicesField" maxWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Zip Code:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="zipCodeField" maxWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="City:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="cityField" maxWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Photo File Path:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="photoFilePathField" maxWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Button fx:id="saveButton" onAction="#handleSaveButton" text="Save Changes" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <Button mnemonicParsing="false" onAction="#handleDeleteParkingspotButton" text="Delete parkingspot" GridPane.rowIndex="6" />

            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </center>

</BorderPane>
