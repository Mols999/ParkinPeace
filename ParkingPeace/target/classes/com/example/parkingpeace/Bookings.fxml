<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import java.lang.String?>
<?import javafx.geometry.Pos?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.parkingpeace.BookingsController" prefWidth="960" prefHeight="540">

    <!-- Top bar with logo, search field and dropdown menu -->
    <top>
        <HBox alignment="CENTER" spacing="25">
            <ImageView>
                <Image url="@Logo.png"/>
            </ImageView>
            <DatePicker fx:id="datePicker" />
            <TextField fx:id="searchField" promptText="Search"/>
            <ComboBox fx:id="dropdownMenu">
                <!-- Add menu items here -->
            </ComboBox>
            <Button text="Confirm" onAction="#handleConfirmButton" />
        </HBox>
    </top>

    <!-- Calendar and booking details -->
    <center>
        <HBox spacing="10">

            <!-- Calendar -->
            <VBox spacing="10">
                <HBox spacing="10">
                    <Button text="month" />
                    <Label fx:id="monthLabel"/>
                    <Button text="Label"/>
                </HBox>
                <TableView fx:id="tableView">
                    <columns>
                        <TableColumn fx:id="dateColumn" text="Date">
                            <cellValueFactory>
                                <PropertyValueFactory property="date" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="priceColumn" text="Price">
                            <cellValueFactory>
                                <PropertyValueFactory property="price" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>

            <!-- Booking details -->
            <VBox spacing="10">
                <Label fx:id="nightsLabel" text="Nights: "/>
                <Label fx:id="pricePerNightLabel" text="Price per night: "/>
                <Label fx:id="totalPriceLabel" text="Total price: "/>
                <Button fx:id="rentButton" text="Rent"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
