<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import java.lang.String?>
<?import javafx.geometry.Pos?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane prefHeight="540" prefWidth="960" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.parkingpeace.BookingsController">

    <!-- Top bar with logo, search field, and dropdown menu -->
    <top>
        <HBox alignment="CENTER" spacing="25">
            <children>
                <ImageView>
                    <image>
                        <Image url="@Logo.png" />
                    </image>
                </ImageView>
                <TextField fx:id="searchField" promptText="Search" />
            </children>
        </HBox>
    </top>

    <!-- Calendar and booking details -->
    <center>
        <VBox alignment="CENTER" spacing="10">
            <children>
                <DatePicker fx:id="startDatePicker" />
                <Label text="To" />
                <DatePicker fx:id="endDatePicker" />
                <Button fx:id="bookButton" text="Book" onAction="#handleBookButton" />
            </children>
        </VBox>
    </center>

    <!-- Booking details -->
    <right>
        <VBox prefHeight="482.0" prefWidth="84.0" spacing="10">
            <children>
                <Label fx:id="nightsLabel" text="Nights: " />
                <Label fx:id="pricePerNightLabel" text="Price per night: " />
                <Label fx:id="totalPriceLabel" text="Total price: " />
                <Button fx:id="cancelButton" prefHeight="35.0" prefWidth="83.0" text="Cancel Booking" onAction="#handleCancelButton" />
            </children>
        </VBox>
    </right>

</BorderPane>
