<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.parkingpeace.ProfileController"
      alignment="CENTER"
      spacing="10">

    <Label text="User Profile" styleClass="title" />

    <Label fx:id="nameLabel" />
    <Label fx:id="emailLabel" />

    <Button text="Edit Profile" onAction="#handleEditButton" />
    <Button text="Change Password" onAction="#handleChangePasswordButton" />
</VBox>
