<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import java.lang.String?>
<?import javafx.geometry.Pos?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane prefHeight="540" prefWidth="960" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.example.parkingpeace.BookingsController">

    <!-- Top bar with logo, search field and dropdown menu -->
    <top>
        <HBox alignment="CENTER" spacing="25">
           <children>
               <ImageView>
                  <image>
                      <Image url="@Logo.png" />
                  </image>
               </ImageView>
               <DatePicker fx:id="datePicker" />
               <TextField fx:id="searchField" promptText="Search" />
               <ComboBox fx:id="dropdownMenu">
                <!-- Add menu items here -->
            </ComboBox>
               <Button onAction="#handleConfirmButton" text="Confirm" />
           </children>
        </HBox>
    </top>

    <!-- Calendar and booking details -->
    <center>
        <HBox spacing="10">
           <children>

               <!-- Calendar -->
               <VBox spacing="10">
      <children>
                      <HBox spacing="10">
                         <children>
                             <Button text="month" />
                             <Label fx:id="monthLabel" />
                             <Button text="Label" />
                         </children>
                      </HBox>
                      <TableView fx:id="tableView" prefHeight="400.0" prefWidth="811.0">
                          <columns>
                              <TableColumn fx:id="dateColumn" text="Date">
                                  <cellValueFactory>
                                      <PropertyValueFactory property="date" />
                                  </cellValueFactory>
                              </TableColumn>
                              <TableColumn fx:id="priceColumn" text="Price">
                                  <cellValueFactory>
                                      <PropertyValueFactory property="price" />
                                  </cellValueFactory>
                              </TableColumn>
                          </columns>
                      </TableView>
      </children>
               </VBox>

               <!-- Booking details -->
               <VBox prefHeight="482.0" prefWidth="84.0" spacing="10">
      <children>
                      <Label fx:id="nightsLabel" text="Nights: " />
                      <Label fx:id="pricePerNightLabel" text="Price per night: " />
                      <Label fx:id="totalPriceLabel" text="Total price: " />
                      <Button fx:id="rentButton" prefHeight="35.0" prefWidth="83.0" text="Rent" />
      </children>
               </VBox>
           </children>
        </HBox>
    </center>
</BorderPane>
