<BorderPane prefHeight="540" prefWidth="960" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.parkingpeace.BookingsController">

    <!-- Top bar with logo, search field, and dropdown menu -->
    <top>
        <HBox alignment="CENTER" spacing="25">
            <children>
                <ImageView>
                    <image>
                        <Image url="@Logo.png" />
                    </image>
                </ImageView>
                <DatePicker fx:id="datePicker" />
                <TextField fx:id="searchField" promptText="Search" />
                <ComboBox fx:id="dropdownMenu">
                    <!-- Add menu items here -->
                </ComboBox>
                <Button onAction="#handleConfirmButton" text="Confirm" />
            </children>
        </HBox>
    </top>

    <!-- Calendar and booking details -->
    <!-- Calendar and booking details -->
    <center>
        <VBox alignment="CENTER" spacing="10">
            <children>
                <Label fx:id="monthLabel" styleClass="month-label" />
                <GridPane fx:id="calendarGrid" alignment="CENTER" hgap="10" vgap="10">
                    <!-- Add calendar labels dynamically using drawCalendar method -->
                </GridPane>
            </children>
        </VBox>
    </center>

    <!-- Booking details -->
    <right>
        <VBox prefHeight="482.0" prefWidth="84.0" spacing="10">
            <children>
                <Label fx:id="nightsLabel" text="Nights: " />
                <Label fx:id="pricePerNightLabel" text="Price per night: " />
                <Label fx:id="totalPriceLabel" text="Total price: " />
                <Button fx:id="rentButton" prefHeight="35.0" prefWidth="83.0" text="Rent" />
            </children>
        </VBox>
    </right>
</BorderPane>
